# Development environment variables for local testing

# Backend Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8080

# For Cloud Run deployment, update to:
# BACKEND_HOST=your-app.run.app
# BACKEND_PORT=443

# Session Configuration
SESSION_TIMEOUT_MINUTES=5
HEARTBEAT_INTERVAL_SECONDS=30

# Camera Configuration
TARGET_FRAME_RATE=30
MAX_VIDEO_WIDTH=1280
MAX_VIDEO_HEIGHT=720

# Privacy Configuration
ENABLE_PRIVACY_MODE=true
PRIVACY_PROCESSING_DELAY_MS=150

# Distance-Based Blur (user-requested 15m threshold feature)
ENABLE_DISTANCE_BLUR=true
NEAR_THRESHOLD=0.7     # Bottom 70% of frame = near (clear)
MEDIUM_THRESHOLD=0.5   # Middle 50% = medium distance (light blur)
FAR_THRESHOLD=0.3      # Top 30% = far (medium blur)

# UI Configuration
ENABLE_HAPTIC_FEEDBACK=true
ENABLE_SOUND_EFFECTS=false

# Debug Configuration
ENABLE_DEBUG_LOGS=true
ENABLE_DEBUG_CONTROLS=true
